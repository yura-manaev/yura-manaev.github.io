const title = itemDataAdventures.find(x => x.id === postNumber).title + ' - avrtt.github.io';
const key = itemDataAdventures.find(x => x.id === postNumber).key;
const date = itemDataAdventures.find(x => x.id === postNumber).date;
var banner = require("./img/adventures/" + key + ".jpg");

